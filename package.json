{
  "name": "picky-desktop-uploader",
  "version": "2.1.60",
  "description": "PicSmart desktop app for uploading files even when the browser is closed",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "node generate-version.js && electron-builder",
    "build:win": "node generate-version.js && electron-builder --win --x64",
    "create-icon": "node create-icon.js"
  },
  "keywords": [
    "picsmart",
    "upload",
    "desktop"
  ],
  "author": "PicSmart Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.12.2",
    "crypto-js": "^4.2.0",
    "electron-store": "^8.1.0",
    "exif-parser": "^0.1.12",
    "form-data": "^4.0.0",
    "mime-types": "^2.1.35",
    "sharp": "^0.33.2"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.picsmart.desktopuploader",
    "productName": "PicSmart Desktop Uploader",
    "artifactName": "PicSmart.Uploader.Setup-${version}.exe",
    "win": {
      "target": "nsis",
      "icon": "assets/icon512.png",
      "publisherName": "PicSmart"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "perMachine": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "deleteAppDataOnUninstall": false
    }
  }
}
